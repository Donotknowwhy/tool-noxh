{
  "manifest_version": 3,
  "name": "RiceCity Auto Submit",
  "version": "1.0.0",
  "description": "Tự động submit form và retry khi gặp lỗi quá tải",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://ricecitylongchau.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://ricecitylongchau.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://ricecitylongchau.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "RiceCity Auto Submit"
  }
}

